<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/draw_layout"
    android:fitsSystemWindows="true"
    android:background="#FFF"
    tools:context=".Model.MainActivity"
    tools:openDrawer="start">

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/btn_name"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/rounded_corner_1"
            android:textColor="@color/colorPrimary"
            android:text="@string/app_name"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="-5dp"
            android:id="@+id/bottomBtnLayout"
            android:layout_below="@+id/btn_name">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal">

                        <Button
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="1dp"
                            android:background="@drawable/rounded_corner_1"
                            android:textColor="@color/colorPrimary"
                            android:layout_height="40dp"
                            android:text="@string/type_dex"
                            android:id="@+id/btn_type"/>

                        <Button
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_marginStart="1dp"
                            android:background="@drawable/rounded_corner_1"
                            android:textColor="@color/colorPrimary"
                            android:layout_height="40dp"
                            android:text="@string/item_dex"
                            android:id="@+id/btn_item"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="2dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                        <Button
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_corner_1"
                            android:textColor="@color/colorPrimary"
                            android:layout_marginEnd="1dp"
                            android:layout_height="40dp"
                            android:text="@string/location_dex"
                            android:id="@+id/btn_location"/>

                        <Button
                            android:layout_width="0dp"
                            android:layout_marginStart="1dp"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_corner_1"
                            android:textColor="@color/colorPrimary"
                            android:layout_height="40dp"
                            android:text="@string/region_dex"
                            android:id="@+id/btn_region"/>

                </LinearLayout>

        </LinearLayout>
        
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_below="@+id/bottomBtnLayout"
            android:background="#FFF"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

</RelativeLayout>